{
  "name": "usetemporal",
  "private": true,
  "description": "Revolutionary time library with unique divide() pattern for hierarchical time management",
  "author": "Aleksej Dix <git@aleksejdix.com>",
  "license": "Apache-2.0",
  "homepage": "https://usetemporal.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AleksejDix/usetemporal.git"
  },
  "bugs": {
    "url": "https://github.com/AleksejDix/usetemporal/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "npm run build --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "cd docs && npm run docs:dev",
    "docs:build": "cd docs && npm run docs:build",
    "docs:preview": "cd docs && npm run docs:preview",
    "test:workspaces": "npm run test --workspaces --if-present",
    "test:vue": "npm run build --workspace=@allystudio/usetemporal && TZ=UTC npm run test --workspace=@allystudio/usetemporal-vue",
    "dev": "npm run dev --workspace=@allystudio/usetemporal",
    "dev:react": "npm run dev --workspace=@allystudio/usetemporal-react",
    "dev:vue": "npm run dev --workspace=@allystudio/usetemporal-vue",
    "dev:svelte": "npm run dev --workspace=@allystudio/usetemporal-svelte",
    "demo:build:react": "npm run demo:build --workspace=@allystudio/usetemporal-react",
    "demo:build:vue": "npm run demo:build --workspace=@allystudio/usetemporal-vue",
    "demo:build:svelte": "npm run demo:build --workspace=@allystudio/usetemporal-svelte",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "lint:workspaces": "npm run lint --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@js-temporal/polyfill": "^0.5.1",
    "@tsconfig/svelte": "^5.0.6",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "oxlint": "^1.29.0",
    "prettier": "^3.6.2",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "optionalDependencies": {
    "@oxlint/linux-x64-gnu": "^1.29.0",
    "@oxlint/wasm32-wasi": "^1.29.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
