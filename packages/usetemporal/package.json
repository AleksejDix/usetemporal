{
  "name": "@allystudio/usetemporal",
  "version": "2.0.0",
  "type": "module",
  "description": "Revolutionary time library with unique divide() pattern for hierarchical time management",
  "license": "Apache-2.0",
  "author": "Aleksej Dix <git@aleksejdix.com>",
  "homepage": "https://usetemporal.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AleksejDix/usetemporal.git",
    "directory": "packages/usetemporal"
  },
  "bugs": {
    "url": "https://github.com/AleksejDix/usetemporal/issues"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./operations": {
      "types": "./dist/operations.d.ts",
      "import": "./dist/operations.js"
    },
    "./calendar": {
      "types": "./dist/calendar.d.ts",
      "import": "./dist/calendar.js"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    },
    "./native": {
      "types": "./dist/native.d.ts",
      "import": "./dist/native.js"
    },
    "./temporal": {
      "types": "./dist/temporal.d.ts",
      "import": "./dist/temporal.js"
    },
    "./luxon": {
      "types": "./dist/luxon.d.ts",
      "import": "./dist/luxon.js"
    },
    "./date-fns": {
      "types": "./dist/date-fns.d.ts",
      "import": "./dist/date-fns.js"
    },
    "./date-fns-tz": {
      "types": "./dist/date-fns-tz.d.ts",
      "import": "./dist/date-fns-tz.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {},
  "devDependencies": {
    "@js-temporal/polyfill": "^0.5.1",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.12.1",
    "@usetemporal/tsconfig": "2.0.0-alpha.1",
    "@vitest/coverage-v8": "^4.0.13",
    "jsdom": "^26.0.0",
    "typescript": "^5.7.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^4.0.13"
  },
  "optionalDependencies": {
    "@js-temporal/polyfill": "^0.5.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.0.0",
    "luxon": "^3.5.0"
  },
  "keywords": [
    "time",
    "date",
    "temporal",
    "divide",
    "typescript",
    "calendar",
    "stableMonth",
    "pure-functions",
    "framework-agnostic"
  ]
}
